---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import PageHero from '../components/PageHero.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Newsletter | Argentina's Golden Visa">
  <Header />
  <main>
    <PageHero 
      title="Stay Informed"
      subtitle="Newsletter"
      description="Get the latest updates on Argentine immigration, investment opportunities, and expat lifestyle tips delivered to your inbox."
      image="https://images.unsplash.com/photo-1526628953301-3e589a6a8b74?w=1920&q=80"
      breadcrumbs={[{ label: 'Newsletter', href: '/newsletter' }]}
    />

    <!-- Newsletter Signup Section -->
    <section class="section-padding bg-white">
      <div class="container-luxury">
        <div class="max-w-2xl mx-auto">
          <div class="text-center mb-12">
            <p class="label-small mb-4">Join Our Community</p>
            <h2 class="font-serif text-3xl md:text-4xl font-light text-charcoal mb-6">
              Subscribe to Our Newsletter
            </h2>
            <p class="font-sans text-base font-light text-gray-warm leading-relaxed">
              Join thousands of readers who stay up-to-date with the latest immigration news, policy changes, and insights about living in Argentina.
            </p>
          </div>

          <!-- Signup Form -->
          <form class="space-y-6" action="#" method="POST">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block font-sans text-sm font-light text-charcoal mb-2">
                  First Name
                </label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  required
                  class="w-full px-4 py-3 border border-gray-border font-sans text-base font-light text-charcoal focus:outline-none focus:border-charcoal transition-colors"
                  placeholder="Enter your first name"
                />
              </div>
              <div>
                <label for="lastName" class="block font-sans text-sm font-light text-charcoal mb-2">
                  Last Name
                </label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  required
                  class="w-full px-4 py-3 border border-gray-border font-sans text-base font-light text-charcoal focus:outline-none focus:border-charcoal transition-colors"
                  placeholder="Enter your last name"
                />
              </div>
            </div>

            <div>
              <label for="email" class="block font-sans text-sm font-light text-charcoal mb-2">
                Email Address
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-border font-sans text-base font-light text-charcoal focus:outline-none focus:border-charcoal transition-colors"
                placeholder="Enter your email address"
              />
            </div>

            <div>
              <label class="block font-sans text-sm font-light text-charcoal mb-3">
                I'm interested in (select all that apply):
              </label>
              <div class="space-y-3">
                <label class="flex items-center gap-3 cursor-pointer">
                  <input type="checkbox" name="interests" value="visas" class="w-4 h-4 accent-bronze" />
                  <span class="font-sans text-sm font-light text-gray-warm">Visa & Immigration Updates</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer">
                  <input type="checkbox" name="interests" value="realestate" class="w-4 h-4 accent-bronze" />
                  <span class="font-sans text-sm font-light text-gray-warm">Investment Properties</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer">
                  <input type="checkbox" name="interests" value="lifestyle" class="w-4 h-4 accent-bronze" />
                  <span class="font-sans text-sm font-light text-gray-warm">Expat Lifestyle & Culture</span>
                </label>
                <label class="flex items-center gap-3 cursor-pointer">
                  <input type="checkbox" name="interests" value="finance" class="w-4 h-4 accent-bronze" />
                  <span class="font-sans text-sm font-light text-gray-warm">Tax & Financial Planning</span>
                </label>
              </div>
            </div>

            <div class="pt-4">
              <button
                type="submit"
                class="w-full btn-luxury py-4"
              >
                Subscribe to Newsletter
              </button>
            </div>

            <p class="font-sans text-xs font-light text-gray-light text-center">
              By subscribing, you agree to receive email communications from Argentina's Golden Visa. 
              You can unsubscribe at any time. We respect your privacy.
            </p>
          </form>
        </div>
      </div>
    </section>

    <!-- What You'll Receive -->
    <section class="section-padding bg-cream-light">
      <div class="container-luxury">
        <div class="text-center mb-16">
          <p class="label-small mb-4">What to Expect</p>
          <h2 class="font-serif text-3xl md:text-4xl font-light text-charcoal">
            What You'll Receive
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center p-6">
            <div class="w-14 h-14 mx-auto mb-5 flex items-center justify-center border border-gray-border rounded-full">
              <svg class="w-6 h-6 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 7.5h1.5m-1.5 3h1.5m-7.5 3h7.5m-7.5 3h7.5m3-9h3.375c.621 0 1.125.504 1.125 1.125V18a2.25 2.25 0 01-2.25 2.25M16.5 7.5V18a2.25 2.25 0 002.25 2.25M16.5 7.5V4.875c0-.621-.504-1.125-1.125-1.125H4.125C3.504 3.75 3 4.254 3 4.875V18a2.25 2.25 0 002.25 2.25h13.5M6 7.5h3v3H6v-3z" />
              </svg>
            </div>
            <h3 class="font-serif text-lg text-charcoal mb-2">Monthly Digest</h3>
            <p class="font-sans text-sm font-light text-gray-warm leading-relaxed">
              A curated summary of the most important immigration news and updates.
            </p>
          </div>
          <div class="text-center p-6">
            <div class="w-14 h-14 mx-auto mb-5 flex items-center justify-center border border-gray-border rounded-full">
              <svg class="w-6 h-6 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
              </svg>
            </div>
            <h3 class="font-serif text-lg text-charcoal mb-2">Property Alerts</h3>
            <p class="font-sans text-sm font-light text-gray-warm leading-relaxed">
              Early access to new investment properties that qualify for visa programs.
            </p>
          </div>
          <div class="text-center p-6">
            <div class="w-14 h-14 mx-auto mb-5 flex items-center justify-center border border-gray-border rounded-full">
              <svg class="w-6 h-6 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z" />
              </svg>
            </div>
            <h3 class="font-serif text-lg text-charcoal mb-2">Expert Tips</h3>
            <p class="font-sans text-sm font-light text-gray-warm leading-relaxed">
              Practical advice from immigration experts and expats living in Argentina.
            </p>
          </div>
          <div class="text-center p-6">
            <div class="w-14 h-14 mx-auto mb-5 flex items-center justify-center border border-gray-border rounded-full">
              <svg class="w-6 h-6 text-bronze" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
              </svg>
            </div>
            <h3 class="font-serif text-lg text-charcoal mb-2">Exclusive Content</h3>
            <p class="font-sans text-sm font-light text-gray-warm leading-relaxed">
              Subscriber-only guides, webinars, and special offers.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="section-padding bg-charcoal">
      <div class="container-luxury text-center">
        <h2 class="font-serif text-3xl md:text-4xl font-light text-white mb-6">
          Ready to Start Your Journey?
        </h2>
        <p class="font-sans text-base font-light text-white/70 max-w-xl mx-auto mb-10">
          While you wait for our newsletter, why not schedule a free consultation to discuss your options?
        </p>
        <a href="/contact" class="inline-block px-10 py-4 font-sans text-[11px] font-normal tracking-luxury uppercase bg-white text-charcoal hover:bg-cream-light transition-colors duration-300">
          Book a Consultation
        </a>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>
