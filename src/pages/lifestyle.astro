---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import PageHero from '../components/PageHero.astro';
import Footer from '../components/Footer.astro';

const regions = [
  {
    name: 'Buenos Aires',
    tagline: 'The Paris of the South',
    description: 'A cosmopolitan capital with strong dining and nightlife, varied architecture, and a dense cultural scene.',
    image: 'https://images.unsplash.com/photo-1612294037637-ec328d0e075e?w=800&q=80',
  },
  {
    name: 'Mendoza',
    tagline: 'Wine Country',
    description: 'At the foot of the Andes, home to Malbec vineyards and mountain landscapes.',
    image: 'https://images.unsplash.com/photo-1510812431401-41d2bd2722f3?w=800&q=80',
  },
  {
    name: 'Bariloche',
    tagline: 'The Argentine Alps',
    description: 'Patagonian lakes, snow-capped peaks, and alpine-style chocolate and tourism.',
    image: 'https://images.unsplash.com/photo-1518684079-3c830dcef090?w=800&q=80',
  },
  {
    name: 'C√≥rdoba',
    tagline: 'The Heartland',
    description: 'Argentina\'s second city: colonial history, sierras, and a large university population.',
    image: 'https://images.unsplash.com/photo-1558618666-fcd25c85cd64?w=800&q=80',
  },
];

