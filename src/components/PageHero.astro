---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  image?: string;
  breadcrumbs?: Array<{ label: string; href: string }>;
}

const { 
  title, 
  subtitle, 
  description,
  image = 'https://images.unsplash.com/photo-1589909202802-8f4aadce1849?w=1920&q=80',
  breadcrumbs = []
} = Astro.props;
---

<section class="page-hero">
  <!-- Background Image -->
  <div class="page-hero-bg">
    <img
      src={image}
      alt={title}
      class="page-hero-image"
    />
  </div>

  <!-- Dark Gradient Overlay -->
  <div class="page-hero-overlay"></div>

  <!-- Content -->
  <div class="page-hero-content">
    <!-- Breadcrumbs -->
    {breadcrumbs.length > 0 && (
      <nav class="page-hero-breadcrumbs">
        <ol class="breadcrumb-list">
          <li>
            <a href="/" class="breadcrumb-link">Home</a>
          </li>
          {breadcrumbs.map((crumb, index) => (
            <>
              <li class="breadcrumb-separator">/</li>
              <li>
                {index === breadcrumbs.length - 1 ? (
                  <span class="breadcrumb-current">{crumb.label}</span>
                ) : (
                  <a href={crumb.href} class="breadcrumb-link">{crumb.label}</a>
                )}
              </li>
            </>
          ))}
        </ol>
      </nav>
    )}

    <!-- Subtitle -->
    {subtitle && (
      <p class="page-hero-subtitle">
        {subtitle}
      </p>
    )}

    <!-- Title -->
    <h1 class="page-hero-title">
      {title}
    </h1>

    <!-- Description -->
    {description && (
      <p class="page-hero-description">
        {description}
      </p>
    )}
  </div>
</section>

<style>
  /* Hero Section Container */
  .page-hero {
    position: relative;
    height: 55vh;
    min-height: 450px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  /* Background Image Container */
  .page-hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .page-hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(0.85);
  }

  /* Dark Gradient Overlay - MUCH DARKER */
  .page-hero-overlay {
    position: absolute;
    inset: 0;
    z-index: 1;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.55) 0%,
      rgba(0, 0, 0, 0.65) 50%,
      rgba(0, 0, 0, 0.75) 100%
    );
  }

  /* Content Container */
  .page-hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* Breadcrumbs */
  .page-hero-breadcrumbs {
    margin-bottom: 28px;
  }

  .breadcrumb-list {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .breadcrumb-link {
    font-family: 'Montserrat', system-ui, sans-serif;
    font-size: 13px;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.85);
    text-decoration: none;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.6);
    transition: color 0.3s ease;
  }

  .breadcrumb-link:hover {
    color: #FFFFFF;
  }

  .breadcrumb-separator {
    color: rgba(255, 255, 255, 0.5);
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.6);
  }

  .breadcrumb-current {
    font-family: 'Montserrat', system-ui, sans-serif;
    font-size: 13px;
    font-weight: 400;
    color: #FFFFFF;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.6);
  }

  /* Subtitle */
  .page-hero-subtitle {
    font-family: 'Montserrat', system-ui, sans-serif;
    font-size: 12px;
    font-weight: 500;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #FFFFFF;
    margin-bottom: 16px;
    text-shadow: 0 2px 12px rgba(0, 0, 0, 0.7);
  }

  /* Title */
  .page-hero-title {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-size: 42px;
    font-weight: 400;
    letter-spacing: 0.02em;
    line-height: 1.15;
    color: #FFFFFF;
    margin-bottom: 20px;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.8), 0 2px 8px rgba(0, 0, 0, 0.6);
  }

  @media (min-width: 768px) {
    .page-hero-title {
      font-size: 52px;
    }
  }

  @media (min-width: 1024px) {
    .page-hero-title {
      font-size: 62px;
    }
  }

  /* Description */
  .page-hero-description {
    font-family: 'Montserrat', system-ui, sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.7;
    color: #FFFFFF;
    max-width: 700px;
    margin: 0 auto;
    text-shadow: 0 2px 12px rgba(0, 0, 0, 0.7);
  }

  @media (min-width: 768px) {
    .page-hero-description {
      font-size: 18px;
    }
  }
</style>
